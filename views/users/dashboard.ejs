  <div class="main-cont">
    <%- include('../layouts/flash') %>
    <div class="header">
      <div class="title">
        <h1>Dashboard</h1>
      </div>
      <div class="acc_settings">
        <img src="/images/setting-icon.svg" alt="settings">
        <div>Account Settings</div>
      </div>
    </div>
    <hr>
    <div class="data-tab">
      <table class="blueTable">
        <thead>
          <div class="tab-head">
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Category</th>
            </tr>
          </div>
        </thead>
        <tbody>
          <%- include('../layouts/flash') %> 
          <% for(book of books) { %>
            <% let flag = false %>  
              <% for(l of list) { %>
              <% if((l.book._id).toString() === (book._id).toString()) {%>
              <% flag = true %> 
              <% } %>   
              <% } %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.authors[0] %></td>
              <td><%= book.category[0] %></td>
              <% if(flag) { %>
                  <td>Requested</td>
              <% } else if(user.books_borrowed.some(e => (e.bookid).toString() === (book._id).toString())) { %>
                  <td>Approved!</td>    
              <% } else if( book.stock ) { %>
                  <td><form action="/user/books/requestbook/<%= book._id %>" method="post"><button>Request Book</button></form></td>
              <% } else { %>
                  <td>Out of Stock!</td> 
              <% } %>           
            </tr>
          <% } %> 
        </tbody>
        </tr>
      </table>
    </div>
  </div>
</body>

