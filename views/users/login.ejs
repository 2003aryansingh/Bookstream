        </div>
        <a href="/login"><img src="/images/arrow-left-nav.svg" id="prev-page" alt="Previous-page"></a>
        <div class="form-container">
            <h2>You are just a few steps away from a seamless transition.....</h2>
            <div class="actions-container">
                <div class="login-form">
                    <div class="title">
                        <img src="/images/user-icon.svg" alt="login">
                        <p>Student Login</p>
                    </div>
                    <hr>
                    <form action="/user/login" method="post">
                        <div class="user-details">
                            <div class="username">
                                <label for="username">Username</label><br>
                                <input type="text" name="username" id="username">
                            </div>
                        </div>
                        <div class="user-password">
                            <div class="pass">
                                <label for="password">Password</label>
                                <a href="#" style="text-decoration: none;">
                                    <p>Forgot password?</p>
                                </a>
                            </div><br>
                            <div class="pass-input">
                                <input type="password" name="password" id="password">
                                <div class="show-pass">
                                    <img src="/images/password-eye.svg" alt="" id="toggle">
                                </div>
                            </div>
                        </div>
                        <div class="remember-me">
                            <input type="checkbox" name="remember-me" id="remember-me">
                            <label for="remember-me">Remember me</label>
                        </div>
                        <div class="login-btn">
                            <button type="submit" id="submit">Login</button>
                        </div>
                    </form>
                    <!-- Trigger/Open The Modal -->
                    <button id="trigger">Open Modal</button>
                </div>
            </div>
        </div>
    </div>
    <!-- The Modal -->
    <div id="alertModal" class="alertModal">
        <div class="test-cont">
            <!-- Modal content -->
            <div class="alertmodal-content">
                <p>The username and password do not match!</p><span class="closebtn"><i class="fa-solid fa-xmark"></i></span>
            </div>
        </div>
    </div>
    <script>
         const password = document.getElementById("password"); 
        const toggle = document.getElementById("toggle");

        document.getElementsByClassName("show-pass")[0].addEventListener("click", function(){
            if(password.type == "password"){
                password.type = "text";
                toggle.src = "/images/close-eye.svg";}
                else{
                    password.type = "password";
                    toggle.src = "/images/password-eye.svg";
                }
        });
    </script>
    <script>
        // Get the modal
        var alertmodal = document.getElementById("alertModal");
        
        // Get the button that opens the modal
        var trigger = document.getElementById("trigger");
        
        // Get the <span> element that closes the modal
        var close = document.getElementsByClassName("closebtn")[0];
        
        // When the user clicks the button, open the modal 
        trigger.onclick = function() {
          alertmodal.style.display = "block";
        }
        
        // When the user clicks on <span> (x), close the modal
        close.onclick = function() {
          alertmodal.style.display = "none";
        }
        
