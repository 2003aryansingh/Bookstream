                    <p> Manage Sections</p>
                </a>
            </div>
            <div class="nav-item">
                <a href="/admin/manage-requests"><img src="/images/book-icon.svg" alt="">
                    <p> Borrow requests</p>
                </a>
            </div>
        </div>
    </div>
    <div class="main-cont">
        <%- include('../layouts/flash') %>
        <div class="header">
            <div class="title">
                <h1>Manage overdue books</h1>
            </div>
            <div class="acc_settings" data-toggle="modal" data-target=".bd-example-modal-sm">
                <img src="/images/setting-icon.svg" alt="settings">
                <div>Account Settings</div>
            </div>
            <!-- Log out Modal -->
            <div class="modal fade bd-example-modal-sm" id="exampleModalCenter" tabindex="-1" role="dialog"
                aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Profile Settings</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="options">
                                <button class="btn btn-primary">Log-out</button>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <h2>Blacklist students due to of delay of book return</h2>
        <p>Note: Delay in book return for 10+ days will result in blacklisting students</p>
        <div class="data-tab">
            <table class="blueTable">
                <thead>
                    <div class="tab-head">
                        <tr>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Overdues</th>
                            <th>Actions</th>
                        </tr>
                    </div>
                </thead>
                <tbody>
                    <% for(u of users) { %>
                        <%  const today = new Date(); %>
                        <%  const booksBorrowed = u.books_borrowed %>
                        <%  const overdueBooks = booksBorrowed.filter(book => { %>
                        <%  const returnDate = new Date(book.returnAt); %>
                        <%  return returnDate.getTime() < today.getTime(); %>
                        <%  }); %>
                        <tr>
                            <td><%= u.username %></td>
                            <td><%= u.dept %></td>
                            <td><%= overdueBooks.length %></td>
                            <td>
                                <form action="#" method="post"><button id="blacklist">Blacklist</button></form>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
                </tr>
            </table>
        </div>
